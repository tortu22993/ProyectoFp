<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/consultar_citas_paciente"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >





            <RelativeLayout android:id="@+id/page_consultar_citas_paciente_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View   android:id="@+id/_bg__consultar_citas_paciente_ek2"
                    android:background="@drawable/_bg__consultar_citas_paciente_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="411dp"
                    android:layout_height="731dp" />


                <RelativeLayout android:id="@+id/parte_inicial_arriba_ek4"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >




                    <RelativeLayout android:id="@+id/home_buttons_ek4"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView android:id="@+id/homeBoton"
                            android:src="@drawable/home_ek4"
                            android:contentDescription="home_ek4"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />



                    </RelativeLayout>

                </RelativeLayout>


                <EditText
                    android:id="@+id/buscarEditText"
                    android:background="@color/white"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:hint=" Busque el hospital mas cercano"/>



                <RelativeLayout android:id="@+id/buscar"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="78dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/buscarBoton"
                        android:background="@drawable/rectangle_3_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="259dp"
                        android:layout_height="70dp" />

                    <TextView android:id="@+id/buscarTV"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/reservar_color"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="17dp"
                        android:layout_width="140dp"
                        android:layout_height="52dp"
                        android:text="Buscar"
                        />



                </RelativeLayout>

                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="180dp"
                    android:layout_width="371dp"
                    android:layout_height="450dp"
                     />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>




